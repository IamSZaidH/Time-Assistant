<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    android:orientation="vertical"

    android:padding="@dimen/_15sdp"
    tools:context=".SpLang">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Language"
        android:textColor="@color/white"
        android:textSize="@dimen/_24sdp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/_5sdp"
        />
    <TextView
        android:layout_width="@dimen/_95sdp"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_12sdp"/>
    <!--    English-->
    <RelativeLayout
        android:id="@+id/english"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:background="@drawable/borderfeature"
        android:layout_marginBottom="@dimen/_12sdp"
        android:clickable="true">

        <ImageView
            android:id="@+id/tr"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_11sdp"
            android:src="@drawable/languages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tr"
            android:text="English"
            android:textColor="@color/black"

            android:textSize="@dimen/_24sdp" />

        <ImageView
            android:id="@+id/englishImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:src="@android:drawable/checkbox_on_background" />
    </RelativeLayout>
    <!--HIndi-->
    <RelativeLayout
        android:id="@+id/hindi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:background="@drawable/borderfeature"
        android:layout_marginBottom="@dimen/_12sdp">

        <ImageView
            android:id="@+id/tr1"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_11sdp"
            android:src="@drawable/languages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tr1"
            android:text="Hindi"
            android:textColor="@color/black"

            android:textSize="@dimen/_24sdp" />

        <ImageView
            android:id="@+id/hindiImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:src="@android:drawable/checkbox_on_background" />
    </RelativeLayout>
<!-- Urdu-->
    <RelativeLayout
        android:id="@+id/urdu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:background="@drawable/borderfeature"
        android:layout_marginBottom="@dimen/_12sdp">

        <ImageView
            android:id="@+id/tr2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_11sdp"
            android:src="@drawable/languages" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tr2"
            android:text="Urdu"
            android:textColor="@color/black"
            android:textSize="@dimen/_24sdp" />

        <ImageView
            android:id="@+id/urduImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:src="@android:drawable/checkbox_on_background" />
    </RelativeLayout>

</LinearLayout>